.annotations-index
	display none
	padding-left 20px
	// .controls
	// 	@media print
	// 		display none

	// 	margin-bottom 1em
	// 	.print
	// 		float right

	a
		h2
			background-color lighten(lightGrey, 50%)
			border-radius 3px
			padding 1em
			margin-top 0
			margin-left -1em
			color #444

			// @media print
			// 	background-color transparent
			// 	padding 0
			// 	margin-left 0

			.print
				font-size 0.7em
				color #AAA
				cursor pointer
				margin-left 10px

			.count
				font-size .7em
				line-height 180%
				font-weight normal
				color mediumGrey
				display block

	ul.annotation-types, .contents
		display inline-block
		box-sizing border-box
		vertical-align top

	ul.annotation-types
		overflow auto
		padding 10px
		margin 0
		background-color lightGrey
		border-radius 3px
		width 35%
		list-style none

		// @media print
		// 	display none

		li
			font-size 13px
			margin-left 0
			margin 10px 0

			&.all
				border-bottom 1px solid darken(lightGrey, 10%)
				padding 10px 0
				margin-top 0

			&:hover a
				color defaultPurple
				background-color lighten(lightGrey, 50%)

			a
				color #444
				padding 3px 6px
				border-radius 3px

			span.count
				color mediumGrey

	.contents
		padding-left 55px
		font-size 13px
		width 65%
		overflow auto

		section
			margin-top 4em
			padding-right 20px
			
			&:first-child
				margin-top 0

		// @media print
		// 	width 80%
		// 	.link 
		// 		display none

		ol
			margin 0
			padding 0
			li
				position relative
				margin 0 0 1em 0
				a
					color defaultPurple

		.position
			font-size 12px
			// font-weight bold
			color mediumGrey
			margin-bottom 1em
			span
				margin-right 1em
		
		.annotated-text
			font-family textFont
			font-weight bold
			font-size 1.4em

		.annotation-text
			font-family bodyFont

@import '../import/*'

.faceted-search-results
	top 112px

	.overlay
		background rgba(0, 0, 0, 0.2)
		position absolute
		z-index 1
		border-radius 8px
		display none

		div
			position fixed
			padding 6px
			background #FFF
			border-radius 30px
			box-shadow 1px 1px 10px #000
			margin-left -20px
			margin-top -20px
			width 40px
			height 40px

	.faceted-search
		ul.facets-menu
			li.switch button
				outline none
				i, span
					box-sizing border-box
					display none
					vertical-align top
				i
					width 12px
				span
					width calc(100% - 12px)

		&.search-type-advanced
			ul.facets-menu li.switch button
				i.fa-angle-double-up, span.simple
					display inline-block
		&.search-type-simple
			ul.facets-menu li.switch button
				i.fa-angle-double-down, span.advanced
					display inline-block

		.text-search
			input
				&:focus
					outline none
					border-color rgba(defaultPurple, 0.25)
					box-shadow 0 0 3px rgba(defaultPurple, 0.25)

				&:focus + i.fa-search
					box-shadow 0 0 3px rgba(defaultPurple, 0.25)

			i.fa-search
				background defaultPurple
				cursor pointer

			.search-input
				input, div.search-icon
					box-sizing border-box
					display inline-block
					vertical-align top

				div.search-icon
					cursor pointer
					height 30px
					background-color #ccc
					border-bottom-right-radius 3px
					border-top-right-radius 3px
					line-height 40px
					text-align center
					width 15%

					svg
						width 12px
						fill white

			.menu
				display none

		.facet
			margin-bottom 16px

			.body
				margin-top 4px

		.facet.list
			header > .menu
				position absolute
				cursor pointer
				top 0
				right 0

				svg
					width 14px
					height 14px
					display none

					&.filter
						display inline

					&.visible
						display inline

					&.active
						rect
							fill lightblue
							fill-opacity 0.5

			.container > ul > li
				&.checked
					svg.checked
						display inline-block
					svg.unchecked
						display none

				svg
					width 14px
					height 15px
					vertical-align top
					padding-right 3px
					box-sizing border-box

					&.checked
						display none

					&.unchecked
						display inline-block

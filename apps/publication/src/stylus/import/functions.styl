easeOutQuint()
	-webkit-transition: all 600ms cubic-bezier(0.23, 1, 0.32, 1)
	transition:         all 600ms cubic-bezier(0.23, 1, 0.32, 1)

vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

border-radius()
	vendor('border-radius', arguments)

background-image()
	vendor('background-image', arguments)

clear-fix()
	&:before, &:after
		clear both
		content ""
		display block
		visibility hidden
		line-height 0
		height 0

no-padding-margin()
	padding 0
	margin 0

button(textColor=darken(mediumGrey, 30%), bgColor=lightGrey)
	box-sizing border-box
	background-color bgColor
	border-radius 4px
	border none
	color textColor
	font-size 9pt
	cursor pointer
	line-height 19px
	padding 0 5px
	vendor('outline', 0)
	vendor('user-select', none)

	&:hover
		background-color darken(bgColor, 10%)

	&.active
		background-color mediumGrey
		color white
		&:hover
			background-color lighten(mediumGrey, 10%)

	&[disabled]
		cursor default
		disabledBg = lighten(bgColor, 70%)
		background-color disabledBg
		color lighten(textColor, 60%)
		&:hover
			background-color disabledBg

big-button(textColor=darken(mediumGrey, 30%), bgColor=lightGrey)
	button(textColor, bgColor)
	padding 10px 15px
	box-shadow 1px 1px 1px #ccc

	&[disabled]
		box-shadow 1px 1px 1px #f0f0f0

control-button()
	vendor('user-select', none)
	vendor('outline', 0)
	display inline-block
	padding 1em
	cursor pointer
	background-color controlsButtonColor
	color white
	font-size 12px
	box-shadow none
	border-radius 3px
	width auto
	padding 5px 5px
	margin 10px 0

	&:hover
		background-color lighten(controlsButtonColor, 5%)

	&:active
		background-color darken(controlsButtonColor, 5%)

.not-visible
	visibility hidden
	opacity 0

.hidden
	display none

form
	ul.form(data-model-id!="<%= model.cid %>")
		li
			label Type
			select(name="metadata.type")
				| <% collection.each(function(item) { %>
				| <% var selected = (item.id === model.get('annotationType').id) ? ' selected' : ''; %>
				| <option value="<%= item.id %>"<%= selected %>><%= item.get('description') %> (<%= item.get('name') %>)</option>
				| <% }); %>
		//- | <% console.log(model.get('annotationType')) %>
		//- | <% console.log(model.get('annotationType').annotationTypeMetadataItems) %>
		| <% _.each(model.get('annotationType').annotationTypeMetadataItems, function(metadata) { %>
		li 
			label(title!="<%= metadata.description %>") <%= metadata.name %>
			input(type="text", name!="metadata.<%= metadata.name %>", value!="<%= model.get('metadata')[metadata.name] %>")
		| <% }); %>
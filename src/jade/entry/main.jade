.submenu
	.row.span7
		.cell.span3.left
			ul.horizontal.menu
				li(data-key="previous") &nbsp;
				li(data-key="current")= name
				li(data-key="next") &nbsp;
				//- li.arrowdown.subsub(data-key="editfacsimiles") Edit facsimiles
				li.alignright(data-key="facsimiles") Facsimiles
					ul.vertical.menu.facsimiles
						li.spacer &nbsp;
						li.subsub(data-key="editfacsimiles") Edit...
						each facsimile in facsimiles.models
							li(data-key="facsimile", data-value=facsimile.id)= facsimile.get('name')
		.cell.span2.alignright
			ul.horizontal.menu
				//- li(data-key="save") MoveSave
				//- li.subsub(data-key="edittextlayers") Edit layers
				li(data-key="print") Print
				li.arrowdown(data-key="layer") Layer
					ul.vertical.menu.textlayers
						li.spacer &nbsp;
						each transcription in transcriptions.models
							li(data-key="transcription", data-value=transcription.id) #{transcription.get('textLayer')} layer
				//- li(data-key="metadata") Metadata
		.cell.span2.alignright
			ul.horizontal.menu
				li(data-key="metadata") Metadata
				//- li(data-key="preview") Preview

.subsubmenu
	.edittextlayers
	.editfacsimiles

.row.span7.container
	.cell.span3
		.left-pane
			if facsimiles.length
				iframe#viewer_iframe(name="viewer_iframe", scrolling="no", width="100%", frameborder="0")
	.cell.span2
		.middle-pane
			.transcription-placeholder
				.transcription-editor
			.annotation-placeholder
				.annotation-editor
			.annotationmetadata-placeholder
				.annotationmetadata
	.cell.span2.preview-placeholder
		h2 Preview
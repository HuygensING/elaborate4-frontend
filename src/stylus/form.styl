form
	ul
		list-style none

		li
			margin-bottom 8px

			label
				display inline-block
				width 100px

				&.small
					width 40px

				&.large
					width 160px

			input
				border 1px solid #BBB
				padding-left 4px

			input[type="submit"]
				margin-left 100px
				box-shadow 1px 1px 2px #CCC
				border-radius 4px
				color #333
				padding 2px 6px
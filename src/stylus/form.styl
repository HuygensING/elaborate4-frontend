form
	ul
		list-style none

		li
			margin-bottom 8px

			label
				display inline-block
				width 100px

				&.small
					width 40px

				&.large
					width 160px

			select
				width 156px // 6px = 4px padding left and 2px border
				border 1px solid #CCC
				background none

			input
				width 150px
				border 1px solid #CCC
				padding-left 4px

			input[type="submit"]
				margin-left 100px
				box-shadow 1px 1px 2px #CCC
				border-radius 4px
				color #333
				padding 2px 6px
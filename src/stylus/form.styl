form
	ul
		list-style none

		li
			margin-bottom 8px

			label
				display inline-block
				width 100px

				&.small
					width 40px

				&.large
					width 160px

			select
				width 156px // 6px = 4px padding left and 2px border
				border 1px solid #CCC
				background none

			input
				width 150px
				border 1px solid #CCC
				padding-left 4px

			input[type="checkbox"]
				width auto

			input[type="submit"]
				simplebutton()

button.simple
	simplebutton()
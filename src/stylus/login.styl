@import './import/*'

.modal.reset-password
	header
		margin-bottom 30px

	label
		display block
		font-size 1.1em
		margin-left 1px

	input
		font-size 1.2em
		margin 6px 0 30px 0
		padding 0 0 0 4px
		border 1px solid #CCC
		width 200px
		line-height 24px

#main > .login

	h2
		margin-top 0
		text-align left

	.federated
		padding-left 5%
		margin-top 40px

		button.federated-login
			margin-left 0
			width 75px

	form.login
		text-align left
		box-shadow none
		border 1px solid #DDD

		ul
			&.message
				li
					display none
					text-align left
					padding 12px
					background #F00
					border-radius 4px
					color #FFF
					font-weight bold
					margin-bottom 18px
			
			li.login
				margin-top 20px

			li.loggingin
				display none
				padding 10px
				background-color white
				margin-left 100px
				border 1px solid #CCC
				margin-bottom 8px

				img
					margin-left 10px

			li.resetpassword
				color #46AAA8
				font-size 0.8em
				cursor pointer
				margin -6px 0 0 100px

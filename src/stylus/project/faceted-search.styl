.faceted-search-placeholder
	.faceted-search, .results
		position absolute
		top 100px
		bottom 0
		overflow-y scroll
		
	.faceted-search
		ul.facets-menu
			margin 4px 0 10px 0
			
			li
				&.reset
					display none
					
				button
					width 140px
					outline none
	
	.results
		left 30%
		
	.results div.pages 
		margin-top 12px
		
		ul.page
			list-style none
			
			li.result
				margin-bottom 12px

				&:hover
					cursor pointer
					
					div.title
						background lighten(#6CA1E5, 80%)
						cursor pointer

				&.fulltext:hover
					cursor default

					div.title
						background none
						cursor default
				
				div.title
					text-decoration none
					color black
					font-size 1.4rem
					padding 2px 0
					border-radius 2px

				.found
					color white
					background #BBB
					border-radius 2px
					display inline-block
					margin 10px 0 4px 0
					padding 0 4px
				
				.metadata
					ul
						list-style none

						li
							margin-bottom 0px
							// display inline-block
							// width 30%

							span.key
								color #999

				.keywords
					color #999

					ul
						list-style none

						& > li
							overflow-x hidden
							white-space nowrap
							text-overflow ellipsis
							line-height 20px
							margin-left -4px
							padding 0 4px
							border-radius 3px
							cursor pointer

							&:hover
								background lighten(#6CA1E5, 80%)

							label, ul.kwic
								display inline-block

							label
								width 20%
								vertical-align top
								overflow ellipsis
								cursor pointer

							ul.kwic
								width 80%

								li
									em
										background lighten(#FF0, 40%)
										padding 2px 5px 1px 5px
										-webkit-border-radius 4px
										border-radius 4px
										-webkit-box-shadow 1px 1px 2px #CCC
										box-shadow 1px 1px 2px #CCC
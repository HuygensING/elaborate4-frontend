.projectsettings
	.tab.menu
		font-size 0
		li
			color lighten(black, 30%)
			padding 8px 30px 6px 30px
			margin 0
			border 1px solid #DDDDDD
			border-left 0
			// border-bottom 0

			&:first-child
				border-left 1px solid #DDDDDD
				border-top-left-radius 8px

			&:last-child
				border-top-right-radius 8px

			&:hover
				background-color lighten(#DDDDDD, 30%)

			&.active
				color black
				background-color #DDDDDD

	hr
		padding 0
		margin 0
		border 1px solid white
		box-shadow 0 -1px 0 #DDDDDD

	div[data-tab]
		display none

		&.active
			display block

		h4
			margin-top 3px
			margin-right 10px
			display inline-block

		form
			& > .row
				margin-top 10px

			.row .cell:first-child
				min-width 80px
				max-width 120px

			label
				display inline-block
				width 100px
				line-height 30px
				vertical-align middle

			input
				display inline-block
				width 94% // 94 (width) + 2 (padding-left) + 2 (padding-right) = 98% Leave 2% to compensate for the 1px border
				padding 2%
				border 1px solid #DDD

input
	&:focus
		border 1px solid rgba(70, 170, 168, 0.4)
		box-shadow 0 0 12px rgba(70, 170, 168, 0.5)
		outline 0